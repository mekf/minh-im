extends layout

block content
  h6
    span #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
  .post
    h3.title
      a(href=post.url)
        = post.title
    .post.content
      != post.content
    
    p tags:&nbsp;&nbsp;
      - each tag in post.tags
        a(href=tagUrl(tag)) #{tag}
        | &nbsp;&nbsp;
