- postMonth = post.date.getMonth()
- postMonthName = monthNames(postMonth)
- postDate = post.date.getDate()
- postYear = post.date.getFullYear()

h6
  span #{postMonthName}, #{postDate} #{postYear}

div.post
  h3.title
    a(href=post.url)
      = post.title
  div.post.content
    != post.preview
  
  p tags:&nbsp;&nbsp;
    - each tag in post.tags
      a(href=tagUrl(tag)) #{tag}
      | &nbsp;&nbsp;