- monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
- postMonth = post.date.getMonth() + 1
- postMonthName = monthNames[postMonth]
- postDate = post.date.getDate()
- postYear = post.date.getFullYear()

h6
  span #{postMonthName}, #{postDate} #{postYear}

div.post
  h3.title
    a(href=post.url)
      = post.title
  div.post.content
    != post.preview
  
  p tags:&nbsp;&nbsp;
    - each tag in post.tags
      a(href=tagUrl(tag)) #{tag}
      | &nbsp;&nbsp;