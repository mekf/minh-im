@import url('http//fonts.googleapis.com/css?family=Gentium+Basic400,700')
@import './foundation/foundation.css'
@import './foundation/normalize.css'

body
  font 15px 'Gentium Basic', serif

h1, h2, h3, h4, h5
 	font-family 'Gentium Basic', serif
 	font-weight normal
 	a
 		color #3a3a3a

h4
	text-align center

h5
  position relative
  font-size 1.2em
  color #999
  font-weight normal
  border-bottom 1px solid #ddd
  text-align center
	
 abbr
	  display inline-block
	  position relative
	  color #999
	  padding 0 8px
	  background #fff
	  top 10px
	  border 0

.post
	margin 15px 0 60px 0
	.content
		margin 0 auto
		text-align justify
ul.lists
	list-style-type none

header
	margin-bottom 15px

footer
	text-align center

.navigation
	text-align center

.sidebar
	margin-top 15px