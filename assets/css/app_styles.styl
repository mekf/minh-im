@import url('http//fonts.googleapis.com/css?family=Gentium+Basic400,700')
@import './foundation/foundation.css'
@import './foundation/normalize.css'

body
  font 15px 'Gentium Basic', serif
  padding-top 30px

h1, h2, h3, h4, h5
 	font-family 'Gentium Basic', serif
 	font-weight normal
 	a
 		color #3a3a3a

h5
  position relative
  margin-bottom 30px
  font-size 1.2em
  color #999
  font-weight normal
  border-bottom 1px solid #ddd
	
	abbr
	  display inline-block
	  position relative
	  color #999
	  padding 0 8px 0 0
	  background #fff
	  top 8px
	  border 0

.post
	margin-bottom 60px
	.content
		margin 0 auto
		text-align justify

footer
	text-align center